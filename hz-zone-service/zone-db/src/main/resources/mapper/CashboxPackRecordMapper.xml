<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcxd.db.mapper.CashboxPackRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zcxd.db.model.CashboxPackRecord">
        <id column="id" property="id" />
        <result column="pack_time" property="packTime" />
        <result column="task_date" property="taskDate" />
        <result column="clear_man_id" property="clearManId" />
        <result column="check_man_id" property="checkManId" />
        <result column="box_no" property="boxNo" />
        <result column="dev_id" property="devId" />
        <result column="denom_id" property="denomId" />
        <result column="amount" property="amount" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <select id="countClearManTotalBoxByBank" resultType="java.util.Map">
        select bank_id as bankId, count(1) as total
        from `cashbox_pack_record`
        where pack_time <![CDATA[ >= ]]> #{beginTime} and pack_time <![CDATA[ <= ]]> #{endTime} and status_t = #{status} and  (check_man_id = #{clearMan} or clear_man_id = #{clearMan} or recv_check_man_id = #{clearMan} or recv_clear_man_id = #{clearMan})
        GROUP BY bank_id;
    </select>

</mapper>
